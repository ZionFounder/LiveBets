<body>
  <h1>ðŸŽ² FlipNugz Dice Betting</h1>
  <p>Select a number and enter your wallet address to reserve it. Send 1 SOL to: <b>YOUR_SOL_WALLET_ADDRESS</b></p>

  <div class="numbers" id="numberGrid"></div>

  <div style="margin-top: 20px;">
    <input type="text" id="walletInput" placeholder="Enter your Solana wallet" style="padding: 10px; width: 300px;" />
  </div>

  <div id="confirmation"></div>

  <script>
    const numberGrid = document.getElementById('numberGrid');
    const confirmation = document.getElementById('confirmation');
    const walletInput = document.getElementById('walletInput');

    const takenNumbers = [];

    for (let i = 1; i <= 6; i++) {
      const btn = document.createElement('button');
      btn.textContent = i;
      btn.className = 'number-button';
      btn.onclick = () => {
        const wallet = walletInput.value.trim();
        if (!wallet) {
          alert("Please enter your wallet address first.");
          return;
        }
        if (takenNumbers.includes(i)) {
          alert("This number is already taken.");
          return;
        }
        takenNumbers.push(i);
        btn.disabled = true;
        confirmation.innerHTML = `âœ… <b>Number ${i}</b> reserved for wallet: <b>${wallet}</b><br>Send 1 SOL to: <b>YOUR_SOL_WALLET_ADDRESS</b>`;
      };
      numberGrid.appendChild(btn);
    }
  </script>
